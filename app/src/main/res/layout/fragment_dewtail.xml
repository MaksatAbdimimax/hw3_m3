<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DewtailFragment">

    <ImageView
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_animal"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/tv_animal_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Animal Name"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:id="@+id/tv_animal_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_animal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Animal Desc"
        android:textSize="28sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>